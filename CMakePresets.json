{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-single",
      "displayName": "Ninja single vcpkg",
      "description": "Ninja single type build with vcpkg",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/deps/vcpkg/scripts/buildsystems/vcpkg.cmake"
        }
      }
    },
    {
      "inherits": "ninja-single",
      "name": "ninja-single-debug",
      "displayName": "Ninja debug build",
      "description": "Single target debug build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    },
    {
      "inherits": "ninja-single",
      "name": "ninja-single-release",
      "displayName": "Ninja release build",
      "description": "Single target release build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        }
      }
    },
    {
      "name": "msbuild-vcpkg",
      "displayName": "MSBuild (vcpkg toolchain) Configure Settings",
      "description": "Configure with VS generators and with vcpkg toolchain",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "strategy": "set",
        "value": "x64"
      },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/deps/vcpkg/scripts/buildsystems/vcpkg.cmake"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ninja-single-debug",
      "configurePreset": "ninja-single-debug",
      "displayName": "Build ninja-single-debug",
      "description": "Build ninja-single-debug"
    },
    {
      "name": "ninja-single-release",
      "configurePreset": "ninja-single-release",
      "displayName": "Build ninja-single-release",
      "description": "Build ninja-single-release"
    },
    {
      "name": "msbuild-vcpkg",
      "configurePreset": "msbuild-vcpkg",
      "displayName": "Build MSBuild",
      "description": "Build with MSBuild (VS)"
    }
  ]
}